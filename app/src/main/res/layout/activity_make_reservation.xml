<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeReservationActivity">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wonderw"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/gradient_bg" >
    </FrameLayout>

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/myImageView"
        app:layout_constraintTop_toTopOf="@id/myImageView"
        app:layout_constraintBottom_toBottomOf="@id/myImageView"
        app:layout_constraintRight_toRightOf="@id/myImageView"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/myImageViewTextHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/myImageView"
        app:layout_constraintTop_toTopOf="@id/myImageViewText"
        app:layout_constraintBottom_toBottomOf="@id/myImageView"
        app:layout_constraintRight_toRightOf="@id/myImageView"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="13:30"
        android:textColor="#BCD8D8D8"
        android:textSize="18dp" />



</android.support.constraint.ConstraintLayout>